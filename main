            if stockText and stockText.Text ~= "X0 Stock" then
                local stockNum = tonumber(stockText.Text:match("X(%d+)"))
                if stockNum and stockNum > 0 then
                    for i = 1, stockNum do
                        ReplicatedStorage.GameEvents.BuyGearStock:FireServer(frame.Name)
                        task.wait(0.1)
                    end
                    sendNotification("Bought Gear", frame.Name.." x"..stockNum, 3)
                    boughtAnything = true
                end
            end
        end
    end
    return boughtAnything
end

local function autoBuyEggs()
    local sheckles = LocalPlayer.leaderstats.Sheckles.Value
    if sheckles < 1000000000 then return false end

    local petShop = LocalPlayer.PlayerGui:FindFirstChild("PetShop_UI")
    if not petShop then return false end

    local scrollingFrame = petShop.Frame:FindFirstChildOfClass("ScrollingFrame")
    if not scrollingFrame then return false end

    local boughtAnything = false

    for _, frame in ipairs(scrollingFrame:GetChildren()) do
        if not frame.Name:find("_Padding") and frame:FindFirstChild("Main_Frame") then
            local mainFrame = frame.Main_Frame
            local stockText = mainFrame:FindFirstChild("Stock_Text")
            
            if stockText and stockText.Text ~= "X0 Stock" then
                local stockNum = tonumber(stockText.Text:match("X(%d+)"))
                if stockNum and stockNum > 0 then
                    for i = 1, stockNum do
                        ReplicatedStorage.GameEvents.BuyPetEgg:FireServer(frame.Name)
                        task.wait(0.1)
                    end
                    sendNotification("Bought Egg", frame.Name.." x"..stockNum, 3)
                    boughtAnything = true
                end
            end
        end
    end
    return boughtAnything
end

tab:CreateToggle("Anti Collect Fruits", function(a)
    if a then
        managePrompts(true)
    else
        managePrompts(false)
    end
end)

tab3:CreateButton("Sell All Fruits", function()
    simulateClick(804, 106)
    task.wait(0.2)
    fireproximityprompt(workspace.NPCS.Steven.HumanoidRootPart.ProximityPrompt)
    task.wait(2)
    simulateClick(724, 366)
end)

local function runFullAutoBuyLoop()
    while autoBuyActive do
        -- First pass: Quick check all shops
        autoBuySeeds()
        task.wait(1)
        autoBuyGear()
        task.wait(1)
        autoBuyEggs()
        task.wait(60) -- Wait 1 minute before next cycle
    end
end

tab2:CreateToggle("Auto Buy Seed/Gear/Egg", function(a)
    autoBuyActive = a
    if a then
        -- Stop any existing loop
        stopBuyLoop()
        -- Start new comprehensive loop
        buyLoop = coroutine.create(runFullAutoBuyLoop)
        coroutine.resume(buyLoop)
        sendNotification("Auto-Buy", "Started shopping loop", 3)
    else
        stopBuyLoop()
        sendNotification("Auto-Buy", "Stopped shopping loop", 3)
    end
end)

tab2:CreateToggle("Auto Dinosaur Egg", function(a)
    print(a and "Auto Dino Egg: ON" or "Auto Dino Egg: OFF")
end)

tab3:CreateButton("Sprinker Script", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Phynomie/tg/refs/heads/main/script.lua"))()
end)

task.spawn(function()
    playerFarm = findPlayerFarm()
end)

tab:Show()
